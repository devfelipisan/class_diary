// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model competences {
  id           String         @id
  name         String
  created      DateTime
  presences    presences[]
  coefficients coefficients[]

  @@unique([id])
}

model presences {
  id            String      @id @default(uuid())
  competence_id String
  competence    competences @relation(fields: [competence_id], references: [id], onDelete: Cascade)
  student_id    String
  student       students    @relation(fields: [student_id], references: [id], onDelete: Cascade)
  presence      Boolean
  created       DateTime

  @@unique([id])
}

model coefficients {
  id            String      @id @default(uuid())
  student_id    String
  student       students    @relation(fields: [student_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  teacher_id    String
  teacher       teachers    @relation(fields: [teacher_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  competence_id String
  competence    competences @relation(fields: [competence_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  grade         Float
  created       DateTime

  @@unique([id])
}

model graduating_class {
  id            String     @id @default(uuid())
  school_year   Int
  school_series String
  student_id    students[] //Uma turma possui um ou mais alunos
  teacher_id    String
  teacher       teachers   @relation(fields: [teacher_id], references: [id], onDelete: Cascade) // uma turma pode está vinculado a um professor

  @@unique([id])
}

// Verificar a lógica quem deve ser criado primeiro e puxar os demais?????
model students {
  id                  String            @id @default(uuid())
  name                String
  birthday            DateTime
  created             DateTime
  graduating_class_id String?
  graduating_class    graduating_class? @relation(fields: [graduating_class_id], references: [id], onDelete: SetNull) //um aluno está matriculado em uma única turma
  presence            presences[]
  coefficients        coefficients[] //um aluno possui várias notas

  @@unique([id])
}

model teachers {
  id               String             @id @default(uuid())
  name             String
  email            String
  created          DateTime
  coefficients     coefficients[]
  graduating_class graduating_class[] // um professor pode estar associado a uma ou mais turmas

  @@unique([id])
}
